<div class="container">
  <h1>My Profile</h1>

  <p><%= notice %></p>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @user.name %></td>
        <td><%= @user.email %></td>
        <td>
          <%= link_to 'Show', user_path(@user), class: 'btn btn-primary mr-2' %>
          <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-secondary mr-2' %>
          <%= link_to 'Delete', user_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
