<div class="container-goal-index text-center">
  <div class="title-index d-flex justify-content-between mb-3 align-items-center">
    <%= link_to :back do %>
      <%= image_tag("left-arrow.svg", alt: "left-arrow") %>
    <% end %>
    <div class="col-10 text1 text-center">
      <h4 class= "h4 fw-lighter">Goals</h4>
    </div>

    <%= link_to 'contact' do %>
      <%= image_tag("question.svg", alt: "question_mark") %>
    <% end %>

  </div>

  <% if @goals %>
  <div class="row justify-content-center">
  <% @goals.each do |goal| %>
  <div class="col-md-4 col-sm-12">
    <div class="card mb-4">
    <%= image_tag('savings-pig.gif', alt:'')%>
      <div class="card-body">
      <h5 class="card-title"><%= goal.goal_name %></h5>
      <% sum = [] %>
      <% @credit_card = CreditCard.where(user: current_user) %>
      <% @operations = Operation.where(credit_card: @credit_card) %>
      <% @operations.each do |element| %>
        <% sum << element.next_value[0] %>
      <% end %>
      <% @goal_balance = sum.sum %>
      <p class="card-text">Balance: $<%= @goal_balance %></p>
      <p class="card-text">Amount: $<%= goal.goal_amount.round(2) %></p>
      <p>
        <%= link_to edit_goal_path(goal.id) do %>
         <p class="icon-goal-card"> <i class="fa-solid fa-pen-to-square fa-2xl"></i> </p>
        <% end %>
      </p>
      </div>
    </div>
  </div>
<% end %>
</div>
<% else %>
  <h3>Create a goal</h3>
<% end %>

<%= link_to "Add a Goal", new_goal_path, class:'btn btn-primary text-center mt-4 d-grid gap-2' %>
</div>
