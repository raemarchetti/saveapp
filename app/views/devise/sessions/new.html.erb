<%# log in page %>
<div class="form-container">
 <div class="d-flex justify-content-center align-items-center">
    <%= video_tag "saveapp_motion.mp4", autoplay: true, muted: true, loop: true, class: "", size: "300x160" %>
  </div>
<h2 class="form-heading"></h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", placeholder: "✉️" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", placeholder: "🔐" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary"%>
  </div>
<% end %>
  <div class="form-links">
<%= render "devise/shared/links" %>
  </div>
</div>
