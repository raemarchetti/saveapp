<body>
  <div class="container-card">
    <div class="title">
      <button>
        <%= image_tag('left-arrow.svg', alt: 'left-arrow') %>
      </button>
      <p>Card Center</p>
      <button>
        <%= image_tag('menu-dots.svg', alt: 'three dots') %>
      </button>
    </div>

    <div class="btn-card">
      <button>New Card
        <%= image_tag('plus.svg', alt: 'plus') %>
      </button>
    </div>

    <div class="details">
      <p>Card Details</p>
    </div>
    <div class="list-card">
      <div>
        <p>Card Number</p>
      </div>
      <div>
        <p>Expiration Date</p>
    </div>
    <div>
      <%= image_tag('lock.svg', alt: 'shield lock') %>
      <p>PIN</p>
    </div>
    <div>
      <%= image_tag('credit-card.svg', alt: 'credit card') %>
      <p>Link Card</p>
    </div>
    <div>
      <%= image_tag('credit-card2.svg', alt: 'credit card') %>
      <p>Change Card</p>
    </div>
  </div>
</div>
</body>
