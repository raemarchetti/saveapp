<div class="container text-center mt-5">
  <h1 class="mb-4">Credit Cards</h1>

  <% @credit_cards.each do |credit_card| %>
    <ul class="list-group mb-3">
      <li class="list-group-item">Card Number: <%= credit_card.card_number %></li>
      <li class="list-group-item">Expiration Date: <%= credit_card.expiration_date %></li>
      <li class="list-group-item">
        <%= link_to 'Show', credit_card, class: 'btn btn-info btn-sm mr-2' %>
        <%= link_to 'Edit', edit_credit_card_path(credit_card), class: 'btn btn-warning btn-sm mr-2' %>
        <%= button_to 'Delete', credit_card, method: :delete, class: 'btn btn-danger btn-sm' %>
      </li>
    </ul>
  <% end %>

  <%= link_to 'New Credit Card', new_credit_card_path, class: 'btn btn-success mt-3' %>
</div>
