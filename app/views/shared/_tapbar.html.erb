<div class="container-tapbar">
  <footer>
    <%= link_to welcome_path, class: "btn dash-btn" do %>
    <div class="sign">
      <%=  image_tag('house.svg', alt: 'house') %>
    </div>
    <div class="text"> Home</div>
    <% end %>

    <%= link_to goals_path, class: "btn dash-btn" do %>
    <div class="sign">
      <%=  image_tag('piggy.svg', alt: 'piggy bank') %>
    </div>
    <div class="text"> Goal</div>
    <% end %>

    <%= link_to credit_card_path(current_user.credit_cards.first), class: "btn dash-btn" do %>
    <div class="sign">
      <%=  image_tag('credit-card-white.svg', alt: 'credit card') %>
    </div>
    <div class="text"> Card</div>
      <% end %>

    <%= link_to profile_path, class: "btn dash-btn" do %>
      <div class="sign">
        <%=  image_tag('profile.svg', alt: 'profile') %>
      </div>
      <div class="text"> Profile</div>
    <% end %>
  </footer>
</div>
